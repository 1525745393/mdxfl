{
  "video_dir": "/volume2/NAS2/nas媒体自动管理/待整理/JAV_output",  
  # 视频根目录路径【建议】填写你的 JAV 视频主目录【更改后果】错误路径将导致无法扫描文件

  "output_dir": "",  
  # vsmeta 文件输出目录【建议】为空时与视频文件同目录【更改后果】填写错误路径会写入失败

  "image_dir": "",  
  # 封面图下载目录【建议】为空时与视频同目录，适合 Emby【更改后果】路径错误将导致图像丢失或无法读取

  "rename_template": "{id} - {title}",  
  # 重命名模板【建议】根据需要自定义，如 "{actor}/{id} - {title}"【更改后果】命名不规范可能影响媒体库识别

  "enable_rename": true,  
  # 是否启用重命名功能【建议】初次整理建议开启【更改后果】关闭后文件名将保持原样

  "enable_dry_run": false,  
  # 是否启用 dry-run 模式（仅模拟）【建议】初次运行建议设为 true 进行预览【更改后果】为 false 时将真正修改文件

  "log_json": true,  
  # 是否使用 JSON 格式记录日志【建议】用于后续统计分析或集成【更改后果】设为 false 将使用普通 txt 格式

  "skip_existing": true,  
  # 是否跳过已有 .vsmeta 文件【建议】开启避免重复生成【更改后果】关闭后将覆盖原文件

  "max_threads": 4,  
  # 最大并发线程数【建议】群晖设备推荐 2~4【更改后果】设置过高可能导致 CPU 过载

  "sources_priority": ["javbus", "javdb", "dmm"],  
  # 元数据抓取顺序【建议】根据你信赖的网站排序【更改后果】优先级不同会影响数据准确度

  "supported_exts": [".mp4", ".mkv", ".avi", ".mov", ".wmv"],  
  # 支持的视频文件扩展名【建议】根据你的视频格式补充【更改后果】缺少格式会导致文件被跳过

  "poster_name": "poster.jpg",  
  # 下载封面图命名【建议】使用 poster.jpg 与 Emby 一致【更改后果】其他命名可能导致媒体软件识别失败

  "cover_name": "cover.jpg"  
  # 下载横版封面图命名【建议】使用 cover.jpg 适配部分插件【更改后果】更改可能导致图像不显示
}